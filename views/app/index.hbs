            <div class="column is-two-thirds">
                <div class="container is-fluid">
                    <div class="box">
                        <div class="columns is-centered">
                            <div class="column">
                                <a class="button is-primary">Add Activity</a>
                            </div>
                            <div class="column">
                                <a class="button is-primary">Add Food Stop</a>
                            </div>
                            <div class="column">
                                <a class="button is-primary">Add Gas Station</a>
                            </div>
